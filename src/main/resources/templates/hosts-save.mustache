    {{>layout/header}}
    <div class="content">
        <div class="container-app">
            {{>layout/mypage}}
            <div class="host-register-container">
                <h1>호스트 등록하기</h1>
                <form>
                    <input type="hidden" id="userid" value="{{userid}}">
                    <div class="row mb-3" style="padding-top: 20px;">
                        <label for="shortintro" class="col-sm-2 col-form-label">농장 이름</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="shortintro" id="shortintro">
                        </div>
                    </div>

                    <fieldset class="row mb-3">
                        <legend class="col-form-label col-sm-2 pt-0">지역</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region" value="1" checked>
                                <label class="form-check-label" for="region1">
                                    경기도
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="region" id="region" value="2">
                                <label class="form-check-label" for="region2">
                                    충청도
                                </label>
                            </div>
                            <div class="form-check disabled">
                                <input class="form-check-input" type="radio" name="region" id="region" value="3">
                                <label class="form-check-label" for="region3">
                                    강원도
                                </label>
                            </div>
                        </div>
                    </fieldset>

                    <fieldset class="row mb-3">
                        <legend class="col-form-label col-sm-2 pt-0">나이</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="age" id="age" value="1" checked>
                                <label class="form-check-label" for="age1">
                                    20-30대
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="age" id="age" value="2">
                                <label class="form-check-label" for="age2">
                                    40-50대
                                </label>
                            </div>
                            <div class="form-check disabled">
                                <input class="form-check-input" type="radio" name="age" id="age" value="3">
                                <label class="form-check-label" for="age3">
                                    60대 이상
                                </label>
                            </div>
                        </div>
                    </fieldset>

                    <fieldset class="row mb-3">
                        <legend class="col-form-label col-sm-2 pt-0">성별</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="gender" value="1" checked>
                                <label class="form-check-label" for="age1">
                                    여성
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="gender" value="2">
                                <label class="form-check-label" for="age2">
                                    남성
                                </label>
                            </div>
                        </div>
                    </fieldset>

                    <fieldset class="row mb-3">
                        <legend class="col-form-label col-sm-2 pt-0">농법</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="farmsts" id="farmsts" value="1" checked>
                                <label class="form-check-label" for="farmsts1">
                                    친환경
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="farmsts" id="farmsts" value="2">
                                <label class="form-check-label" for="farmsts2">
                                    일반농법
                                </label>
                            </div>
                            <div class="form-check disabled">
                                <input class="form-check-input" type="radio" name="farmsts" id="farmsts" value="3">
                                <label class="form-check-label" for="farmsts3">
                                    스마트팜
                                </label>
                            </div>
                        </div>
                    </fieldset>

                    <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">농장소개</label>
                            <div class="input-group">
                                <textarea class="form-control" aria-label="With textarea" name="intro"></textarea>
                            </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">주소등록</label>
                        <div class="input-group">
                            <input type="hidden" name="lat" id="lat">
                            <input type="hidden" name="lng" id="lng">
                            <input type="text" id="postcode" placeholder="우편번호">
                            <input type="button" onclick="sample6_execDaumPostcode()" value="우편번호 찾기"><br>
                            <input type="text" id="address" placeholder="주소"><br>
                            <input type="text" id="detailAddress" placeholder="상세주소">
                            <input type="text" id="extraAddress" placeholder="참고항목">

                        </div>
                    </div>
                </form>
                <button type="button" class="btn btn-primary" id="hosts-save">등록</button>
            </div>
        </div>
    </div>
    {{>layout/footer}}
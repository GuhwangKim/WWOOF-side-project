<div class="wrapper">
    {{>layout/header}}
    <div class="container-app">
        {{>layout/mypage}}
            <h1>호스트 등록하기</h1>
        <form>
            <div class="row mb-3">
                <label for="shortintro" class="col-sm-2 col-form-label">농장 이름</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="shortintro">
                </div>
            </div>

            <fieldset class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0">지역</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="region" id="region1" value="1" checked>
                        <label class="form-check-label" for="region1">
                            경기도
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="region" id="region2" value="2">
                        <label class="form-check-label" for="region2">
                            충청도
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="region" id="region3" value="3">
                        <label class="form-check-label" for="region3">
                            강원도
                        </label>
                    </div>
                </div>
            </fieldset>

            <fieldset class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0">나이</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="age" id="age1" value="1" checked>
                        <label class="form-check-label" for="age1">
                            20-30대
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="age" id="age2" value="2">
                        <label class="form-check-label" for="age2">
                            40-50대
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="age" id="age3" value="3">
                        <label class="form-check-label" for="age3">
                            60대 이상
                        </label>
                    </div>
                </div>
            </fieldset>

            <fieldset class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0">농법</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="farmsts" id="farmsts1" value="1" checked>
                        <label class="form-check-label" for="farmsts1">
                            친환경
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="farmsts" id="farmsts2" value="2">
                        <label class="form-check-label" for="farmsts2">
                            일반농법
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="farmsts" id="farmsts3" value="3">
                        <label class="form-check-label" for="farmsts3">
                            스마트팜
                        </label>
                    </div>
                </div>
            </fieldset>

            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">농장소개</label>
                    <div class="input-group">
                        <textarea class="form-control" aria-label="With textarea"></textarea>
                    </div>
            </div>
            <button type="submit" class="btn btn-primary">등록</button>
        </form>

    </div>
    {{>layout/footer}}